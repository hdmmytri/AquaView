<Window x:Class="AquaWPF.Information"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AquaWPF"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="Information" Height="400" Width="300"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="18"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <hc:ImageBlock Grid.Row="1" Source="/Assets/icon.ico" Width="128" Height="128"></hc:ImageBlock>
        <TextBlock Grid.Row="2" Text="Aqua View" TextAlignment="Center" FontSize="25" FontWeight="DemiBold"></TextBlock>
        <TextBlock Grid.Row="3" Text="7th July 2025" TextAlignment="Center" Opacity="0.5"></TextBlock>
        <Button Name="githubItem" Grid.Row="4" Width="120" Content="Github" Click="githubItem_Click"></Button>
    </Grid>
</Window>
